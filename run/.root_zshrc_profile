fpath=(~/.zsh/completion $fpath)
autoload -Uz compinit && compinit -i

# Path to your oh-my-zsh installation.
export ZSH=/root/.oh-my-zsh
ZSH_CUSTOM=/root/.zsh_custom

# Theme
ZSH_THEME="refined"

plugins=(
  git
  git-extras
  sudo
  docker
  yarn
  npm
  web-search
  zsh-autosuggestions
  zsh-wakatime
  kubectl
  zsh-kubectl-prompt
)

source $ZSH/oh-my-zsh.sh
